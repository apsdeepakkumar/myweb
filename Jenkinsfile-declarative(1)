/* 2 types of pipeline 

 declarative and scripted pipeline.  */

 // ******** Definition/Syntax of declarative Pipeline.   ********

pipeline {
    agent {label 'jenkins-slave'}

    stages{
        stage('definition of declarative pipeline')
        {
            steps{
                echo "It's a declarative pipeline"
            }
        }
    }
}


// ******** Definition/Syntax of Scripted Pipeline.   ********

node('jenkins-slave'){
    stage("welcome to jenkins"){
        echo "Welcome to jenkins"
    }
}

